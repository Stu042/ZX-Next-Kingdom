{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
                "reveal": "always"
	},
      "problemMatcher": [
        {
          "owner": "zcc",
	  "fileLocation": [
                        "relative"
                    ],
          "pattern": [
            {
              "regexp": "^(.*?):(\\d+):.*(warning|error).*:\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ]
    }
 ]
}